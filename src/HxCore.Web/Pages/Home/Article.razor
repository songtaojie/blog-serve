@using HxCore.Web.Common;
<article class="hx-article d-flex flex-column justify-content-start">
    @foreach (var blog in blogList)
    {
        <div class="hx-article-item  mb-2 bg-white " data-id="@blog.Id" data-scroll-reveal="enter bottom over 1s">
            <div class="hx-article-item-content">
                <div class="hx-article-item-title">
                    <h4>
                        <a target="_blank" href="@(WebManager.GetFullUrl("","/article/"+blog.Id))">@blog.Title</a>
                    </h4>
                </div>
            </div>
            <div class="hx-article-item-summary hx-article-content-nowrap">
                <p>
                    @blog.PureContent
                </p>
            </div>
            <div class="hx-article-footer d-flex justify-content-start align-items-center">
                <div class="hx-avatar _32x32  hx-circle mr-2">
                    <a>
                        <img src="@(string.IsNullOrEmpty(blog.AvatarUrl)?"static/avatar1.jpg":blog.AvatarUrl)" />
                    </a>
                </div>
                <div class="mr-1">@blog.UserName</div>
                <div class="mr-1">@(WebHelper.GetDispayDate(blog.PublishDate))</div>
                <div class="blog-read ml-auto">
                    <a>
                        <span class="hx-text-gray">阅读</span>
                        <span class="hx-text-blue">@blog.ReadCount</span>
                    </a>
                </div>
                <div class="blog-comment ml-2">
                    <a>
                        <span class="hx-text-gray">评论</span>
                        <span class="hx-text-blue">@blog.CmtCount</span>
                    </a>
                </div>
            </div>
        </div>
    }

</article>
